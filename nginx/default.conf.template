upstream react_server {
	server react;
}

server {
	listen 443 ssl http2 default;

	ssl_certificate     /etc/nginx/ssl/oreore.crt;
	ssl_certificate_key /etc/nginx/ssl/oreore.key;

	location ^~ /api/ {
		proxy_pass http://$RUBY_API;
		proxy_buffering off;
	}

	# location ^~ /img/ {
	# 	proxy_pass http://$RUBY_API;
	# }

	location / {
		proxy_pass http://react_server;
	}
}
